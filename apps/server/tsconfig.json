{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "module": "nodenext",
        "rootDir": "./src",
        "moduleResolution": "nodenext",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "outDir": "./dist",
        "removeComments": true
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules", "./dist", "*.d.ts"]
}
