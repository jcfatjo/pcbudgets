{
    "env": {
        "browser": true
    },
    "extends": ["plugin:react/recommended", "plugin:@next/next/recommended", "plugin:@tanstack/eslint-plugin-query/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "@typescript-eslint/triple-slash-reference": "off",
        "@typescript-eslint/strict-boolean-expressions": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
