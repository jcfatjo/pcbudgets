{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "jsx": "preserve",
        "module": "esnext",
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "resolveJsonModule": true,
        "allowJs": true,
        "noEmit": true,
        "isolatedModules": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "*.d.ts"]
}
