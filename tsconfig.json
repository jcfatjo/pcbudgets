{
    "compilerOptions": {
        "incremental": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@pcbudgets/*": ["apps/server/src/*", "apps/webapp/src/*"]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "references": [
        {
            "path": "apps/webapp"
        },
        {
            "path": "apps/server"
        }
    ],
    "exclude": ["node_modules", "*.d.ts"]
}
